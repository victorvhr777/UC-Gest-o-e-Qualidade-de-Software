def fatorial(n):
    """
    Retorna o fatorial de n (n >= 0).
    Para n < 0, mostra uma mensagem de erro.
    """
    if n < 0:
        print("Erro: o fatorial não é definido para números negativos.")
        return None
    if n == 0:
        return 1
    else:
        resultado = 1
        for i in range(1, n + 1):
            resultado = resultado * i
        return resultado


# Testes esperados
print(fatorial(1)) 
print(fatorial(5))  

try:
    print(fatorial(-1)) 
except ValueError as e:
    print("Erro capturado:", e)      
